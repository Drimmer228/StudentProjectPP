<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFunctions.allWordsFragment">

    <ImageView
        android:id="@+id/goBackToAdminFunc"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/rounded_parent_background"
        android:padding="10sp"
        android:src="@drawable/back"
        android:layout_margin="10sp"
        android:elevation="8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10sp">
        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/rounded_child_background"
            android:id="@+id/allWordsRecycler"
            android:layout_width="350sp"
            android:layout_height="250sp"
            android:padding="10sp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rounded_child_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Название"/>
                <EditText
                    android:id="@+id/editTextNameWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Количество букв"/>
                <EditText
                    android:id="@+id/editTextAmountLetter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Описание"/>
                <EditText
                    android:id="@+id/editTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Категория"/>
                <Spinner
                    android:id="@+id/editTextCategoryWord"
                    android:layout_width="match_parent"
                    android:padding="10sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/addWord"
                    android:background="@drawable/rounded_parent_background"
                    android:padding="10sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginBottom="10sp"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Добавить"/>
                <TextView
                    android:id="@+id/updateWord"
                    android:background="@drawable/rounded_parent_background"
                    android:padding="10sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginBottom="10sp"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:text="Изменить"/>
                <TextView
                    android:id="@+id/deleteWord"
                    android:background="@drawable/rounded_parent_background"
                    android:padding="10sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_marginBottom="10sp"
                    android:textSize="20sp"
                    android:text="Удалить"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>