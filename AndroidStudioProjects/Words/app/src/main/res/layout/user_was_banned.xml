<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_child_background"
        android:padding="20sp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_red_ban_background"
            android:padding="10sp"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:text="Внимание"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_parent_background"
            android:textAlignment="center"
            android:text="@string/info_about_ban"/>

        <TextView
            android:id="@+id/infoDateUnbanTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rounded_parent_background"
            android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>